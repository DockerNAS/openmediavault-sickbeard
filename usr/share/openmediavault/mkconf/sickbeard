#! /bin/sh

APP_PATH=/opt/sickbeard
RUN_AS=sickbeard
DATA_DIR=/home/sickbeard/.sickbeard
/etc/init.d/sickbeard stop

master() {
  cd $APP_PATH
  sudo -u $RUN_AS git reset --hard
  sudo -u $RUN_AS git checkout master
}

develop() {
  cd $APP_PATH
  sudo -u $RUN_AS git reset --hard
  sudo -u $RUN_AS git checkout development
}

anime() {
  cd $APP_PATH
  sudo -u $RUN_AS git reset --hard
  sudo -u $RUN_AS git checkout anime
}

swap_a() {
  if [ -d $APP_PATH ]; then
    rm -Rf $APP_PATH
  fi
  if [ -d $DATA_DIR ]; then
    rm -Rf $DATA_DIR
  fi
  sudo -u $RUN_AS git clone "https://github.com/midgetspy/Sick-Beard.git" -b "master" $APP_PATH
}

swap_b() {
  if [ -d $APP_PATH ]; then
    rm -Rf $APP_PATH
  fi
  if [ -d $DATA_DIR ]; then
    rm -Rf $DATA_DIR
  fi
  sudo -u $RUN_AS git clone "https://github.com/xbianonpi/Sick-Beard-TPB.git" -b "ThePirateBay" $APP_PATH
}

swap_c() {
  if [ -d $APP_PATH ]; then
    rm -Rf $APP_PATH
  fi
  if [ -d $DATA_DIR ]; then
    rm -Rf $DATA_DIR
  fi
  sudo -u $RUN_AS git clone "https://github.com/bricky/Sick-Beard.git"  -b "master" $APP_PATH
}

swap_d() {
  if [ -d $APP_PATH ]; then
    rm -Rf $APP_PATH
  fi
  if [ -d $DATA_DIR ]; then
    rm -Rf $DATA_DIR
  fi
  sudo -u $RUN_AS git clone "https://github.com/echel0n/SickRage"  -b "master" $APP_PATH
}

case "$2" in
  swap_a)
    swap_a
    ;;
  swap_b)
    swap_b
    ;;
  swap_c)
    swap_c
    ;;
  swap_d)
    swap_d
    ;;
  master)
    master
    ;;
  develop)
    develop
    ;;
  *)
    exit 1
esac
