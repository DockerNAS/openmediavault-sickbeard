#!/bin/sh

set -e

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

case "$1" in
    configure)
        if ! getent passwd sickbeard >/dev/null 2>&1; then
            echo "Adding sickbeard user..."
            useradd --create-home --groups users --no-user-group --shell /usr/sbin/nologin sickbeard
            insserv -d sickbeard
		else
            echo "sickbeard user already exists."
        fi

        if [ -e /var/run/sickbeard ]; then
            echo "Cleaning old pid file..."
            rm /var/run/sickbeard -Rf
        fi

        chmod 775 /opt
        chown root:users /opt

        if ! omv_config_exists "/config/services/sickbeard"; then
            echo "Initial configuration."
            object="<enable>0</enable>"
            object="${object}<showtab>0</showtab>"
            object="${object}<ssl>0</ssl>"
            object="${object}<ppass>0</ppass>"
            object="${object}<branch>Please choose a branch</branch>"
            object="${object}<repo>Please choose a repository</repo>"
            object="${object}<branch2>Please choose a branch</branch2>"
            object="${object}<repo2>Please choose a repository</repo2>"
            object="${object}<forks></forks>"
            omv_config_add_element "/config/services" "sickbeard" "${object}" true
        fi

        omv_install_fixperms

        # Activate package triggers. These triggers are only set during the
        # package installation.
        dpkg-trigger update-fixperms
        dpkg-trigger update-locale
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument" >&2
        exit 1
    ;;
esac

exit 0